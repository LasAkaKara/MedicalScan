<RootWidget>:
    ScreenManager:
        id: screen_manager

        LoginScreen:
            name: 'login'
        SignupScreen:
            name: 'signup'
        VerificationScreen:
            name: 'verify'
        ResetPasswordScreen:
            name: 'reset_password'
        HomeScreen:
            name: 'medical_home'
        HistoryScreen:
            name: 'history'
        PrescriptionDetailScreen:
            name: 'prescription_detail'
        ScanScreen:
            name: 'scan'
        SettingsScreen:
            name: 'settings'
        ProfileScreen:
            name: 'profile'

    MDNavigationDrawer:
        id: nav_drawer
        radius: 0, dp(16), dp(16), 0
        MDNavigationDrawerMenu:
            MDNavigationDrawerHeader:
                title: "Xin chào"
                text: "User Name"

            MDNavigationDrawerItem:
                icon: "home"
                text: "Home"
                on_press: root.switch_screen("medical_home")

            MDNavigationDrawerItem:
                icon: "cog"
                text: "Settings"
                on_press: root.switch_screen("settings")

            MDNavigationDrawerItem:
                icon: "exit-to-app"
                text: "Đăng xuất"
                on_press: root.switch_screen("login")