<RootWidget>:
    ScreenManager:
        id: screen_manager

        LoginScreen:
            name: 'login'
        SignupScreen:
            name: 'signup'
        VerificationScreen:
            name: 'verify'
        ResetPasswordScreen:
            name: 'reset_password'
        HomeScreen:
            name: 'medical_home'
        HistoryScreen:
            name: 'history'
        PrescriptionDetailScreen:
            name: 'prescription_detail'
        ScanScreen:
            name: 'scan'
        SettingsScreen:
            name: 'settings'
        ProfileScreen:
            name: 'profile'

    MDNavigationDrawer:
        id: nav_drawer
        radius: 0, dp(16), dp(16), 0
        MDNavigationDrawerMenu:
            MDNavigationDrawerHeader:
                title: "Xin chào"
                text: "User Name"

            Widget:
                size_hint_y: None
                height: dp(10)

            MDNavigationDrawerItem:
                icon: "home"
                text: "Trang chủ"
                on_press: root.switch_screen("medical_home")

            MDNavigationDrawerItem:
                icon: "cog"
                text: "Cài đặt"
                on_press: root.switch_screen("settings")

            MDNavigationDrawerItem:
                icon: "history"
                text: "Lịch sử"
                on_press: root.switch_screen("history")

            MDNavigationDrawerItem:
                icon: "theme-light-dark"
                text: "Light/Dark Mode"
                on_press: root.toggle_theme()

            MDNavigationDrawerItem:
                text_color: utils.get_color_from_hex(ERROR_COLOR)
                icon: "exit-to-app"
                text: "Đăng xuất"
                on_press: root.switch_screen("login")