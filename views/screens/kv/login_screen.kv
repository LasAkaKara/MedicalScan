#:import Animation kivy.animation.Animation
#:import utils kivy.utils

<LoginScreen>:
    email: email
    password: password
    
    GridLayout:
        cols: 1
        rows: 2
        BoxLayout:
            size_hint_y: None
            height: 260
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex(PRIMARY_COLOR)
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "assets/login-bg.jpg"
            orientation: 'vertical'
            padding: [dp(10), dp(60)]
            spacing: dp(20)
        
            HeaderLabel:
                text: 'MediScan'
                font_size: sp(32)
                color: utils.get_color_from_hex(BACKGROUND_COLOR)
                opacity: 0
                on_parent: Animation(opacity=1, duration=0.5).start(self)

            SubtitleLabel:
                text: 'Hiểu Rõ Mọi Thành Phần\nNhắc Nhở Theo Dõi Sức Khỏe'
                halign: 'center'
                color: utils.get_color_from_hex(BACKGROUND_COLOR)
                opacity: 0
                on_parent: Animation(opacity=1, duration=0.5).start(self)


        BoxLayout:
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex("#f9fafc")
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: 'vertical'
            padding: [dp(0), dp(10)]
            spacing: dp(8)
            opacity: 0
            on_parent: Animation(opacity=1, duration=0.5).start(self)

            FormLabel:
                text: "Đăng nhập"
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]

            CustomTextInput:
                id: email
                hint_text: 'Email'
                md_bg_color: utils.get_color_from_hex(HINT_COLOR)
                pos_hint: {'center_x': 0.5}
                icon_left: "account"
                

            PasswordField:
                id: password
                hint_text: 'Mật khẩu'
                pos_hint: {'center_x': 0.5}
                icon_right: "eye"


            MDLabel:
                text: '[ref=forgot]Quên mật khẩu?[/ref]'
                halign: 'right'
                font_size: sp(16)
                color: utils.get_color_from_hex(PRIMARY_COLOR)
                size_hint_y: None
                height: dp(30)
                padding: [dp(20), dp(10)]
                markup: True
                on_ref_press: root.go_to_reset_password()

            Label:
                id: error_label
                text: ''
                color: utils.get_color_from_hex(ERROR_COLOR)
                size_hint_y: None
                height: dp(20)

            
            PrimaryButton:
                id: login_button
                text: 'ĐĂNG NHẬP' if not root.is_submitting else 'ĐANG XỬ LÝ...'
                pos_hint: {'center_x': 0.5}
                disabled: root.is_submitting
                on_press: root.validate_login()
                opacity: 0.5 if root.is_submitting else 1
            
            Widget:
                size_hint_y: None
                height: dp(15)

            MDRaisedButton:
                pos_hint: {"center_x": 0.5}
                text: "Đăng nhập với Google"
                size_hint_x: 0.8
                on_press: root.initiate_google_oauth()
                md_bg_color: utils.get_color_from_hex(PRIMARY_COLOR)
                theme_text_color: "Custom"
                text_color: utils.get_color_from_hex("#FFFFFF")
                icon: "google"

                
            TextButton:
                text: 'Chưa có tài khoản? Đăng ký tại đây'
                pos_hint: {'center_x': 0.5}
                opacity: 0
                on_parent: Animation(opacity=1, duration=0.5).start(self)
                on_press: app.root.switch_screen("signup") 


        